{
  "name": "pocket2kindle",
  "version": "1.0.0",
  "description": "send unread pocket articles to kindle",
  "repository": {
    "type": "git",
    "url": "https://github.com/planetflash/pocket2kindle"
  },
  "main": "index.js",
  "scripts": {
    "build": "webpack --config webpack.prod.js",
    "dev": "webpack --config webpack.dev.js",
    "watch": "webpack --watch --progress --config webpack.dev.js",
    "dev-server": "nodemon ./server.js",
    "dev-client": "webpack-dev-server --open --config webpack.dev.js",
    "start": "concurrently -p '[{name}]' -n 'dev-server,dev-client,webpack' -c 'yellow.bold,blue.bold,magenta.bold,' 'npm run dev-server' 'npm run dev-client' 'npm run watch'",
    "test": "jest",
    "prepush": "npm test",
    "precommit": "lint-staged"
  },
  "lint-staged": {
    "src/**/*.js": [
      "prettier --write",
      "eslint",
      "git add"
    ]
  },
  "author": "Paul Thomas",
  "license": "MIT",
  "dependencies": {
    "babel-plugin-react-css-modules": "^3.3.3",
    "express": "^4.16.2",
    "node-getpocket": "^1.0.0"
  },
  "devDependencies": {
    "autoprefixer": "^8.1.0",
    "babel-cli": "^6.26.0",
    "babel-core": "^6.26.0",
    "babel-eslint": "^8.2.2",
    "babel-jest": "^22.4.1",
    "babel-loader": "^7.1.3",
    "babel-plugin-transform-runtime": "^6.23.0",
    "babel-preset-latest": "^6.24.1",
    "babel-preset-react": "^6.24.1",
    "babel-preset-react-hmre": "^1.1.1",
    "babel-preset-stage-0": "^6.24.1",
    "classnames": "^2.2.5",
    "clean-webpack-plugin": "^0.1.18",
    "concurrently": "^3.5.1",
    "css-loader": "^0.28.10",
    "enzyme": "^3.3.0",
    "enzyme-adapter-react-16": "^1.1.1",
    "eslint": "^4.18.2",
    "eslint-config-prettier": "^2.9.0",
    "eslint-plugin-prettier": "^2.6.0",
    "eslint-plugin-react": "^7.7.0",
    "extract-text-webpack-plugin": "^4.0.0-beta.0",
    "html-webpack-plugin": "^3.0.4",
    "husky": "^0.14.3",
    "jest": "^22.4.2",
    "lint-staged": "^7.0.0",
    "lodash": "^4.17.5",
    "node-sass": "^4.7.2",
    "node-sass-utils": "^1.1.2",
    "nodemon": "^1.17.1",
    "postcss-loader": "^2.1.1",
    "postcss-scss": "^1.0.4",
    "prettier": "^1.11.1",
    "react": "^16.2.0",
    "react-dom": "^16.2.0",
    "react-hot-loader": "^4.0.0",
    "react-redux": "^5.0.7",
    "react-router": "^3.2.0",
    "react-router-redux": "^4.0.8",
    "react-transition-group": "^2.2.1",
    "redux": "^3.7.2",
    "redux-saga": "^0.16.0",
    "sass-loader": "^6.0.7",
    "sass-resources-loader": "^1.3.3",
    "style-loader": "^0.20.2",
    "webpack": "^4.0.1",
    "webpack-cli": "^2.0.10",
    "webpack-dev-server": "^3.1.0",
    "webpack-merge": "^4.1.2"
  }
}
